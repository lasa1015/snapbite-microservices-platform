pipeline {
    agent any

    environment {
        // âœ… è®¾ç½®é•œåƒåå’Œå®¹å™¨åï¼ˆè¿™é‡Œæ˜¯ mongoï¼‰
        IMAGE_NAME = "lasa1015/snapbite-mongo:latest"
        CONTAINER_NAME = "snapbite-mongo"
    }

    stages {

        stage('Check Changes') {
            steps {
                script {
                    def changes = sh(script: "git diff --name-only HEAD~1 HEAD | grep '^mongo/' || true", returnStdout: true).trim()
                    if (!changes) {
                        echo "ğŸ” No changes in mongo, skipping build..."
                        currentBuild.result = 'NOT_BUILT'
                        error('No changes detected, aborting build.')
                    }
                }
            }
        }


        stage('Checkout Code') {
            steps {
                // âœ… æ¸…ç©º Jenkins å·¥ä½œåŒºï¼Œé˜²æ­¢æ„å»ºå†²çª
                deleteDir()
                // âœ… æ‹‰å– GitHub ä»“åº“ main åˆ†æ”¯ä»£ç 
                git branch: 'main',
                    url: 'https://github.com/lasa1015/snapbite-microservices-platform.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                // âœ… è¿›å…¥ mongo ç›®å½•æ„å»ºè‡ªå®šä¹‰ Mongo é•œåƒï¼ˆå¦‚å«åˆå§‹æ•°æ®æˆ–é…ç½®ï¼‰
                dir('mongo') {
                    sh 'docker build -t $IMAGE_NAME .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                // âœ… ä½¿ç”¨ Jenkins å‡­æ®ç™»å½• Docker Hub å¹¶æ¨é€é•œåƒ
                withCredentials([
                    usernamePassword(
                        credentialsId: 'docker-username',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DUMMY'
                    ),
                    string(
                        credentialsId: 'docker-password',
                        variable: 'DOCKER_TOKEN'
                    )
                ]) {
                    sh '''
                        echo "$DOCKER_TOKEN" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push $IMAGE_NAME
                    '''
                }
            }
        }

        stage('Clean Up Dangling Images') {
            steps {
                // âœ… æ¸…ç†æ— æ ‡ç­¾é•œåƒï¼Œä¿æŒæ„å»ºç¯å¢ƒæ•´æ´
                sh '''
                    echo "ğŸ§¼ æ¸…ç†æ‚¬ç©ºæ—§é•œåƒ..."
                    docker image prune -f
                '''
            }
        }
    }

    post {
        success {
            // âœ… æ„å»ºæˆåŠŸåè‡ªåŠ¨è§¦å‘ç»Ÿä¸€éƒ¨ç½² Jobï¼Œæ›´æ–°å®¹å™¨æœåŠ¡
            build job: 'deploy-snapbite-services', wait: false
        }
    }
}
