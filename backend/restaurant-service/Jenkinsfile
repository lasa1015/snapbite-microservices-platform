pipeline {
    agent any

    environment {
        // âœ… è®¾ç½®é•œåƒåå’Œå®¹å™¨åï¼ˆæ³¨æ„è¿™é‡Œæ˜¯ restaurant-serviceï¼‰
        IMAGE_NAME = "lasa1015/snapbite-restaurant-service:latest"
        CONTAINER_NAME = "snapbite-restaurant-service"
    }

    stages {

        stage('Check Changes') {
            steps {
                script {
                    def changes = sh(script: "git diff --name-only HEAD~1 HEAD | grep '^backend/restaurant-service/' || true", returnStdout: true).trim()
                    if (!changes) {
                        echo "ğŸ” No changes in restaurant-service, skipping build..."
                        currentBuild.result = 'NOT_BUILT'
                        error('No changes detected, aborting build.')
                    }
                }
            }
        }

        stage('Checkout Code') {
            steps {
                // âœ… æ¸…ç©ºå·¥ä½œåŒºï¼Œé¿å…æ®‹ç•™ä»£ç å¹²æ‰°æ„å»º
                deleteDir()
                // âœ… æ‹‰å– GitHub ä»“åº“ä¸­çš„ä¸»åˆ†æ”¯ä»£ç 
                git branch: 'main',
                    url: 'https://github.com/lasa1015/snapbite-microservices-platform.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                // âœ… è¿›å…¥ restaurant-service æ¨¡å—ç›®å½•ï¼Œæ„å»ºé•œåƒ
                dir('backend/restaurant-service') {
                    sh 'docker build -t $IMAGE_NAME .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                // âœ… ä½¿ç”¨ Jenkins ä¸­é…ç½®çš„ Docker Hub å‡­æ®æ¨é€é•œåƒ
                withCredentials([
                    usernamePassword(
                        credentialsId: 'docker-username',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DUMMY'
                    ),
                    string(
                        credentialsId: 'docker-password',
                        variable: 'DOCKER_TOKEN'
                    )
                ]) {
                    sh '''
                        echo "$DOCKER_TOKEN" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push $IMAGE_NAME
                    '''
                }
            }
        }

        stage('Clean Up Dangling Images') {
            steps {
                // âœ… æ¸…ç†æœ¬åœ°æ— ç”¨é•œåƒï¼ŒèŠ‚çœç©ºé—´
                sh '''
                    echo "ğŸ§¼ æ¸…ç†æ‚¬ç©ºæ—§é•œåƒ..."
                    docker image prune -f
                '''
            }
        }

    }

    post {
        success {
            // âœ… æ„å»ºæˆåŠŸåè‡ªåŠ¨è§¦å‘éƒ¨ç½²æœåŠ¡çš„ Job
            build job: 'deploy-snapbite-services'
        }
    }
}
