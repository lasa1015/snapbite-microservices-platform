pipeline {
    agent any

    environment {
        // âœ… è®¾ç½®é•œåƒåå’Œå®¹å™¨åï¼ˆè¿™é‡Œæ˜¯ eureka-serverï¼‰
        IMAGE_NAME = "lasa1015/snapbite-eureka:latest"
        CONTAINER_NAME = "snapbite-eureka"
    }

    stages {

        stage('Check Changes') {
            steps {
                script {
                    def changes = sh(script: "git diff --name-only HEAD~1 HEAD | grep '^backend/eureka-server/' || true", returnStdout: true).trim()
                    if (!changes) {
                        echo "ğŸ” No changes in eureka-server, skipping build..."
                        currentBuild.result = 'NOT_BUILT'
                        error('No changes detected, aborting build.')
                    }
                }
            }
        }

        stage('Checkout Code') {
            steps {
                // âœ… æ¸…ç©º Jenkins å·¥ä½œåŒºï¼Œé¿å…æ„å»ºæ—¶å—å†å²æ®‹ç•™å½±å“
                deleteDir()
                // âœ… æ‹‰å– GitHub ä»“åº“ main åˆ†æ”¯ä»£ç 
                git branch: 'main',
                    url: 'https://github.com/lasa1015/snapbite-microservices-platform.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                // âœ… è¿›å…¥ eureka-server æ¨¡å—ç›®å½•ï¼Œæ„å»ºé•œåƒ
                dir('backend/eureka-server') {
                    sh 'docker build -t $IMAGE_NAME .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                // âœ… ä½¿ç”¨ Jenkins å‡­æ®ç™»å½• Docker Hub å¹¶æ¨é€é•œåƒ
                withCredentials([
                    usernamePassword(
                        credentialsId: 'docker-username',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DUMMY'
                    ),
                    string(
                        credentialsId: 'docker-password',
                        variable: 'DOCKER_TOKEN'
                    )
                ]) {
                    sh '''
                        echo "$DOCKER_TOKEN" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push $IMAGE_NAME
                    '''
                }
            }
        }

        stage('Clean Up Dangling Images') {
            steps {
                // âœ… æ¸…ç†æ— ç”¨çš„æ‚¬ç©ºé•œåƒï¼Œä¿æŒç£ç›˜å¹²å‡€
                sh '''
                    echo "ğŸ§¼ æ¸…ç†æ‚¬ç©ºæ—§é•œåƒ..."
                    docker image prune -f
                '''
            }
        }
    }

    post {
        success {
            // âœ… æ„å»ºæˆåŠŸåè§¦å‘ç»Ÿä¸€éƒ¨ç½²ä»»åŠ¡ï¼ˆæ‰§è¡Œ docker compose upï¼‰
            build job: 'deploy-snapbite-services'
        }
    }
}
