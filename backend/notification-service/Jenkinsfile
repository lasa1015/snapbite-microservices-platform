pipeline {
    agent any

    environment {
        // âœ… è®¾ç½®é•œåƒåå’Œå®¹å™¨åï¼ˆæ³¨æ„è¿™é‡Œæ˜¯ notification-serviceï¼‰
        IMAGE_NAME = "lasa1015/snapbite-notification-service:latest"
        CONTAINER_NAME = "snapbite-notification-service"
    }

    stages {

        stage('Checkout Code') {
            steps {
                // âœ… æ¸…ç©º Jenkins å·¥ä½œåŒºï¼Œé¿å…æ—§æ–‡ä»¶å½±å“æ„å»º
                deleteDir()
                // âœ… å…‹éš† GitHub ä»“åº“ main åˆ†æ”¯ä»£ç 
                git branch: 'main',
                    url: 'https://github.com/lasa1015/snapbite-microservices-platform.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                // âœ… è¿›å…¥ notification-service ç›®å½•ï¼Œæ„å»ºé•œåƒ
                dir('backend/notification-service') {
                    sh 'docker build -t $IMAGE_NAME .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                // âœ… ä½¿ç”¨ Jenkins ä¸­é…ç½®çš„ Docker Hub å‡­æ®æ¨é€é•œåƒ
                withCredentials([
                    usernamePassword(
                        credentialsId: 'docker-username',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DUMMY'
                    ),
                    string(
                        credentialsId: 'docker-password',
                        variable: 'DOCKER_TOKEN'
                    )
                ]) {
                    sh '''
                        echo "$DOCKER_TOKEN" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push $IMAGE_NAME
                    '''
                }
            }
        }

        stage('Clean Up Dangling Images') {
            steps {
                // âœ… æ¸…ç†æ‚¬ç©ºé•œåƒï¼Œé¿å…é•œåƒå †ç§¯æµªè´¹ç©ºé—´
                sh '''
                    echo "ğŸ§¼ æ¸…ç†æ‚¬ç©ºæ—§é•œåƒ..."
                    docker image prune -f
                '''
            }
        }
    }

    post {
        success {
            // âœ… æ„å»ºæˆåŠŸåè‡ªåŠ¨è§¦å‘éƒ¨ç½²ä»»åŠ¡ï¼Œæ›´æ–°æ‰€æœ‰å®¹å™¨
            build job: 'deploy-snapbite-services'
        }
    }
}
