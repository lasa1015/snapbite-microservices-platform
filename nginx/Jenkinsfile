pipeline {
    agent any

    environment {
        // âœ… è®¾ç½®é•œåƒåå’Œå®¹å™¨åï¼ˆè¿™é‡Œæ˜¯ snapbite-nginxï¼‰
        IMAGE_NAME = "lasa1015/snapbite-nginx:latest"
        CONTAINER_NAME = "snapbite-nginx"
    }

    tools {
        // âœ… Jenkins ä¸­é¢„å…ˆé…ç½®çš„ Node.js åç§°
        nodejs "nodejs"
    }

    stages {


        stage('Check Changes') {
            steps {
                script {
                    def changes = sh(script: "git diff --name-only HEAD~1 HEAD | grep '^nginx/' || true", returnStdout: true).trim()
                    if (!changes) {
                        echo "ğŸ” No changes in nginx, skipping build..."
                        currentBuild.result = 'NOT_BUILT'
                        error('No changes detected, aborting build.')
                    }
                }
            }
        }


        stage('Checkout Code') {
            steps {
                // âœ… æ¸…ç©º Jenkins å·¥ä½œåŒºï¼Œé˜²æ­¢æ—§æ–‡ä»¶å†²çª
                deleteDir()
                // âœ… æ‹‰å– GitHub ä¸»åˆ†æ”¯æœ€æ–°ä»£ç 
                git branch: 'main',
                    url: 'https://github.com/lasa1015/snapbite-microservices-platform.git'
            }
        }

        stage('Build Frontend') {
            steps {
                // âœ… è¿›å…¥ frontend ç›®å½•ï¼Œå®‰è£…ä¾èµ–å¹¶æ„å»ºå‰ç«¯ï¼Œè¾“å‡ºè‡³ nginx/frontend-dist
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                // âœ… æ„å»º Nginx é•œåƒï¼ˆä¼šæ‰“åŒ…å‰ç«¯é™æ€èµ„æºï¼‰
                dir('nginx') {
                    sh 'docker build -t $IMAGE_NAME .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                // âœ… ç™»å½• Docker Hub å¹¶æ¨é€é•œåƒ
                withCredentials([
                    usernamePassword(
                        credentialsId: 'docker-username',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DUMMY'
                    ),
                    string(
                        credentialsId: 'docker-password',
                        variable: 'DOCKER_TOKEN'
                    )
                ]) {
                    sh '''
                        echo "$DOCKER_TOKEN" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push $IMAGE_NAME
                    '''
                }
            }
        }

        stage('Clean Up Dangling Images') {
            steps {
                // âœ… æ¸…ç†æ‚¬ç©ºæ— æ ‡ç­¾é•œåƒï¼ŒèŠ‚çœç£ç›˜ç©ºé—´
                sh '''
                    echo "ğŸ§¼ æ¸…ç†æ‚¬ç©ºæ—§é•œåƒ..."
                    docker image prune -f
                '''
            }
        }
    }

    post {
        success {
            // âœ… æ„å»ºæˆåŠŸåè‡ªåŠ¨è§¦å‘ç»Ÿä¸€éƒ¨ç½²ä»»åŠ¡
            build job: 'deploy-snapbite-services', wait: false
        }
    }
}
